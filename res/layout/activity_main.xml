<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topcurtain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff384248"
    tools:context="com.example.curtaineffectdemo.MainActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#33445566" >

        <com.mare.curtaineffect.CurtainView
            android:id="@+id/curtain_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/button_menu_press" />
    </FrameLayout>

</RelativeLayout>